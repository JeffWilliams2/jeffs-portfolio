---
const { prevPost, nextPost } = Astro.props
---

<nav class="grid grid-cols-1 gap-4 sm:grid-cols-2">
  {prevPost ? (
    <a
      href={`/blog/${prevPost.id}`}
      class="group flex items-center gap-3 p-4 border border-zinc-200 dark:border-zinc-800 rounded-lg hover:border-zinc-300 dark:hover:border-zinc-700 transition-colors"
    >
      <svg class="w-5 h-5 text-zinc-400 dark:text-zinc-600 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
      </svg>
      <div class="flex flex-col items-start text-left">
        <span class="text-xs text-zinc-500 mb-1">Previous</span>
        <span class="text-sm font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors">
          {prevPost.data.title}
        </span>
      </div>
    </a>
  ) : (
    <div class="opacity-50 cursor-not-allowed">
      <div class="flex items-center gap-3 p-4 border border-zinc-200 dark:border-zinc-800 rounded-lg">
        <svg class="w-5 h-5 text-zinc-400 dark:text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        <div class="flex flex-col items-start text-left">
          <span class="text-xs text-zinc-500 mb-1">Previous</span>
          <span class="text-sm text-zinc-400">No previous post</span>
        </div>
      </div>
    </div>
  )}
  
  {nextPost ? (
    <a
      href={`/blog/${nextPost.id}`}
      class="group flex items-center justify-end gap-3 p-4 border border-zinc-200 dark:border-zinc-800 rounded-lg hover:border-zinc-300 dark:hover:border-zinc-700 transition-colors"
    >
      <div class="flex flex-col items-end text-right">
        <span class="text-xs text-zinc-500 mb-1">Next</span>
        <span class="text-sm font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors">
          {nextPost.data.title}
        </span>
      </div>
      <svg class="w-5 h-5 text-zinc-400 dark:text-zinc-600 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  ) : (
    <div class="opacity-50 cursor-not-allowed">
      <div class="flex items-center justify-end gap-3 p-4 border border-zinc-200 dark:border-zinc-800 rounded-lg">
        <div class="flex flex-col items-end text-right">
          <span class="text-xs text-zinc-500 mb-1">Next</span>
          <span class="text-sm text-zinc-400">No next post</span>
        </div>
        <svg class="w-5 h-5 text-zinc-400 dark:text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </div>
  )}
</nav>
